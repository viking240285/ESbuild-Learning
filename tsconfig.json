{
    "compilerOptions": {
        // куда собираем
        "outDir": "./build/",
        // запрет на any
        "noImplicitAny": true,
        "module": "ESNext",
        // в какой формат копируем, в данном случае ecmascript 6
        "target": "ES6",
        "jsx": "react-jsx",
        // Компилятор будет обрабатывать не только TS файлы, но и JS файлы
        "allowJs": true,
        // Строгий режим
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        // обязательное поле для испрользования esbuild
        "isolatedModules": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
            "checkJs": true
        },
        "exclude": ["node_modules", "**/node_modules/*"]
    }
}